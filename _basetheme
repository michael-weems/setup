#!/usr/bin/env bash

source ./.bashlib

usage() {
	echo "$script_dir/_basetheme"
	echo ""
	echo "Usage:"
	echo "setup the config files to have a default theme"
	echo ""
	echo "Flags:"
	_lib_usage
}
if [[ "$usage" == "true" ]]; then
	usage
	exit 0
fi

script_dir=$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)
log "$script_dir"

execute cd $script_dir

log "----------- _basetheme -----------"

# temp path - prepend scripts dir of setup project so we don't have to have run ./dev-env yet
PATH="$script_dir/.local/scripts:$PATH"

theme --silent --base $HOME/projects/setup
